<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@drawable/btn">
    <RelativeLayout
        android:id="@+id/button_click_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:visibility="visible"

        android:focusable="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/button_icon"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_assistant_black_24dp"
            android:tint="@android:color/white" />

        <ProgressBar
            android:id="@+id/button_progress"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/button_text"
            android:indeterminate="true"
            android:indeterminateTint="@android:color/white"
            android:indeterminateTintMode="src_atop"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/button_text" />

        <TextView
            android:id="@+id/button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/button_icon"
            android:ellipsize="end"
            android:lines="1"
            android:maxLength="30"
            android:text="@string/app_name"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/button_icon" />

    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/button_style_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:visibility="gone">



    </androidx.cardview.widget.CardView>

</RelativeLayout>